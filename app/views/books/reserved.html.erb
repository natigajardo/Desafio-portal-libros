<h3 class="my-3 font-weight-bold">Books reservados</h3>

<div id="books_list">
  <%= render @books %>
</div>

 <!-- Modal -->
<div class="modal fade" id="payBookModal" tabindex="-1" aria-labelledby="payBookModalTitle aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header bg-info text-white">
        <h5 class="modal-title" id="payBookModalTitle">Confirmar compra</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      
      <div class="modal-body" id="modal_body2">
        <%= form_tag(pay_book_path, method: "post", remote: true) do %>
          <label>Selecciona un libro a pagar</label><br>
          <%= select("book", "book_id", Book.where(status: 1).collect {|b| [b.title, b.id]}, {:class => "form-control"} ) %>
          <br>
          <%= submit_tag "Pagar", :class => "btn btn-success float-right"%>
        <% end %>
      </div>

    </div>
  </div>
</div>